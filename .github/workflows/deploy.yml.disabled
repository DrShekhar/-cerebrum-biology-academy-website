name: 🚀 Deploy Ceri AI to Production

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  deploy:
    name: 🌐 Deploy to Vercel
    runs-on: ubuntu-latest
    steps:
      - name: 📥 Checkout code
        uses: actions/checkout@v4

      - name: 📋 Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: 📦 Install dependencies
        run: npm ci --legacy-peer-deps

      - name: 🔍 Basic checks
        run: |
          echo "🔍 Running basic quality checks..."
          npm run lint || echo "⚠️ Lint warnings found, continuing..."
          npm run type-check || echo "⚠️ Type check warnings found, continuing..."

      - name: 🏗️ Build project
        run: npm run build

      - name: 🚀 Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--prod'

      - name: ✅ Deployment complete
        run: |
          echo "🎉 Ceri AI deployment complete!"
          echo "🌐 Live at: https://cerebrumbiologyacademy.com"
          echo "🤖 AI Chat: https://cerebrumbiologyacademy.com/claudechat"