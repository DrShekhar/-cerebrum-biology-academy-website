{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "regions": ["bom1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "REDIS_ENABLED": "true",
    "COMPLEX_FEATURES_ENABLED": "true",
    "AI_CACHE_ENABLED": "true",
    "AI_COST_TRACKING": "true"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/agents/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 60,
      "memory": 512
    },
    "src/app/api/cron/process-agents/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/cron/seo-content-processor/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/whatsapp/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/api/aria/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "www.cerebrumbiologyacademy.com"
        }
      ],
      "destination": "https://cerebrumbiologyacademy.com/",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.cerebrumbiologyacademy.com"
        }
      ],
      "destination": "https://cerebrumbiologyacademy.com/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-otp",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/process-agents",
      "schedule": "5,35 * * * *"
    },
    {
      "path": "/api/cron/nurturing",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/nurturing-sequence",
      "schedule": "30 4 * * *"
    },
    {
      "path": "/api/cron/seo-reminder",
      "schedule": "0 4 * * 5"
    },
    {
      "path": "/api/cron/seo-content-processor",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/seo-scheduled-blogs",
      "schedule": "30 0 * * 1,4"
    },
    {
      "path": "/api/cron/seo-auto-publisher",
      "schedule": "20 */4 * * *"
    },
    {
      "path": "/api/cron/seo-news-monitor",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/seo-trend-monitor",
      "schedule": "30 9 * * *"
    },
    {
      "path": "/api/cron/demo-reminders",
      "schedule": "40 * * * *"
    },
    {
      "path": "/api/cron/webhook-retries",
      "schedule": "10,40 * * * *"
    }
  ]
}
