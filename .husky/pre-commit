#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks (MVP Phase 1 - Pragmatic Mode)..."

# Run lint-staged (code formatting) - BLOCKING
npx lint-staged

# Type checking - NON-BLOCKING (warning only)
echo "🔧 Type checking (non-blocking)..."
npm run type-check || echo "⚠️  Type errors found - review before deployment"

# Run tests - NON-BLOCKING (warning only)
echo "🧪 Running tests (non-blocking)..."
npm test -- --passWithNoTests || echo "⚠️  Test failures found - review before deployment"

# Security check - NON-BLOCKING (warning only)
echo "🛡️ Security audit (warnings only)..."
npm audit --audit-level=high || echo "⚠️  Security issues found - review in Phase 2"

echo "✅ Pre-commit checks completed!"
