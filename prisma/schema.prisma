  content      Json
  thumbnail    String?
  courseId     String?
  chapterId    String?
  topicId      String?
  tags         String[]
  isFavorite   Boolean  @default(false)
  isArchived   Boolean  @default(false)
  lastEditedAt DateTime @default(now())
  metadata     Json?
